#!/bin/sh
#
# Purpose:
#       download the IMPC LacZdata for ELZ
#
# note that "&rows=100000" may need to be increated the next time this is run.
# best to check with Connie.
#
# full url:5
# http://www.ebi.ac.uk/mi/impc/solr/impc_images/select?q=procedure_stable_id:IMPC_ELZ_001&wt=json&rows=100000
#
# products:
#       htmpload, assayload
#
# HISTORY
#
# 02/28/2017	lec
# 	- TR12504
#
# 05/16/2016	lec, sc
# 	- TR12026
#

comment="htmpload"
REMOTE_SITE=www.ebi.ac.uk
REMOTE_SITE_URL=http://$REMOTE_SITE
REMOTE_DIR=/mi/impc/solr/impc_images
LOCAL_DIR=$REMOTE_SITE
REMOTE_FILES="select?q=procedure_stable_id:IMPC_ELZ_001&wt=json&rows=100000"
LOCAL_FILES="impc_lacz_elz.json"
WGET_OPTIONS="-O $LOCAL_FILES --no-parent -t 10 -nd -m"
local_dir_check=true
do_deletes=false
recursive=false
